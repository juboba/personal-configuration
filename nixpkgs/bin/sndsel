#!/usr/bin/env sh

set_sink () {
  SINK_NAME=$(pactl -f json list sinks \
    | jq ".[].properties | select(.[\"node.nick\"] == \"$1\") | .[\"node.name\"]" \
    | tr -d \")
  
  if [ -n "$SINK_NAME" ]; then
    pactl set-default-sink "$SINK_NAME" ||
      notify-send "Failed default"
  fi
}

SINK_NICK=$(pactl -f json list sinks \
  | jq ".[].properties" \
  | jq ".[\"node.nick\"]" \
  | tr -d \" \
  | rofi -dmenu -i)

set_sink "$SINK_NICK"
